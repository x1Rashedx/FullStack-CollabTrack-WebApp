# Django Settings
DEBUG=1
SECRET_KEY=

# Database (SQLite is used by default, uncomment for PostgreSQL)
# DATABASE_URL=postgresql://collabtrack:password@db:5432/collabtrack
DATABASE_URL=sqlite:///db.sqlite3

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Frontend & backend external URL (for CORS)
FRONTEND_URL=
BACKEND_URL=

# Firebase Admin SDK (for push notifications)
# Place your firebase_adminsdk.json file in the backend directory
FIREBASE_SERVICE_ACCOUNT_JSON=

# SendGrid (for email notifications)
# Get your API key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=
DEFAULT_FROM_EMAIL=

# Twilio (for SMS notifications)
# Get credentials from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=